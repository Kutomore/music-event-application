<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :event_type %>
    <% # FIXME fix this selector %>
    <%= form.select :event_type, options_for_select(Event.event_types.map {|k, v| [k.humanize.capitalize, k]}) %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field">
    <%= form.label :Artists %>
    <%= form.collection_select(:artist_ids, Artist.all, :id, :name, {:selected => @event.artist_ids, :multiple => true} )%>
  </div>

  <div class="field">
    <%= form.label :Genres %>
    <%= form.collection_select(:genre_ids, Genre.all, :id, :name, {:selected => @event.genre_ids, :multiple => true} )%>
  </div>

  <div class="field">
    <%= form.fields_for :address do |address_form|%>
      <%= render partial: 'addresses/form', locals: { address_form: address_form }  %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
